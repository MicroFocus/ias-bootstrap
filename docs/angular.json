{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "docs": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "prefix": "app",
            "schematics": {
                "@schematics/angular:component": {
                    "styleext": "scss"
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-builders/custom-webpack:browser",
                    "options": {
                        "customWebpackConfig": {
                            "path": "./extra-webpack.config.js",
                            "mergeStrategies": { "externals": "replace" }
                        },
                        "outputPath": "dist/docs",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.app.json",
                        "assets": [
                            "src/favicon.ico",
                            "src/404.html",
                            "src/assets",
                            { "glob": "**/*", "input": "node_modules/@microfocus/ias-icons/dist/fonts", "output": "/assets/ias-icons/fonts" },
                            { "glob": "**/*", "input": "node_modules/bootstrap/dist/fonts", "output": "/assets/bootstrap/fonts" },
                            { "glob": "**/*", "input": "node_modules/@ux-aspects/ux-aspects/img", "output": "/assets/ux-aspects/img" },
                            { "glob": "**/*", "input": "node_modules/@ux-aspects/ux-aspects/fonts", "output": "/assets/ux-aspects/fonts" }
                        ],
                        "styles": [
                            "src/scss/third-party-wrappers/bootstrap.scss",
                            "src/scss/third-party-wrappers/ux-aspects.scss",
                            "src/scss/third-party-wrappers/ias-icons.scss",
                            "src/scss/third-party-wrappers/ias-bootstrap.scss",
                            "node_modules/prismjs/plugins/toolbar/prism-toolbar.css",
                            "node_modules/prismjs/themes/prism.css",
                            "src/styles.scss"
                        ],
                        "extractCss": true,
                        "scripts": []
                    },
                    "configurations": {
                        "production": {
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "extractCss": true,
                            "namedChunks": false,
                            "aot": true,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "2mb",
                                    "maximumError": "5mb"
                                }
                            ]
                        },
                        "test": {
                            "fileReplacements": [
                                { "replace": "src/index.html", "with": "src/index.test.html" },
                                { "replace": "src/main.ts",    "with": "src/main.test.ts" }
                            ]
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-builders/dev-server:generic",
                    "options": {
                        "browserTarget": "docs:build"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "docs:build:production"
                        },
                        "test": {
                            "browserTarget": "docs:build:test"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "docs:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.spec.json",
                        "karmaConfig": "src/karma.conf.js",
                        "styles": [
                            "src/styles.scss"
                        ],
                        "scripts": [],
                        "assets": [
                            "src/favicon.ico",
                            "src/assets"
                        ]
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "src/tsconfig.app.json",
                            "src/tsconfig.spec.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        },
        "docs-e2e": {
            "root": "e2e/",
            "projectType": "application",
            "prefix": "",
            "architect": {
                "e2e": {
                    "builder": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "e2e/protractor.conf.js",
                        "devServerTarget": "docs:serve"
                    },
                    "configurations": {
                        "production": {
                            "devServerTarget": "docs:serve:production"
                        }
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": "e2e/tsconfig.e2e.json",
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "docs"
}
